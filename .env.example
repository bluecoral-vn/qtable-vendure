# ─────────────────────────────────────────────
# QTable Vendure Environment Variables
# ─────────────────────────────────────────────
# Copy to .env and fill in production values.
# Variables marked REQUIRED must be set.

# ─── Database ───
DB_TYPE=postgres
DB_HOST=127.0.0.1
DB_PORT=5432
DB_NAME=qtable-vendure
DB_USERNAME=vendure
DB_PASSWORD=                          # REQUIRED — change for production
DB_SYNCHRONIZE=false                  # Set true ONLY for initial setup

# ─── Auth ───
SUPERADMIN_USERNAME=superadmin
SUPERADMIN_PASSWORD=                  # REQUIRED — change for production
COOKIE_SECRET=                        # REQUIRED — random 32+ char string

# ─── Server ───
PORT=3000
NODE_ENV=production

# ─── Tenant Defaults ───
DEFAULT_LANGUAGE=en
DEFAULT_CURRENCY=USD
